[flake8]
max-line-length = 88
extend-ignore = E203,W503,E501,D100,D104,D105,D107,D213,D214,D215,D400,D401,D403,D404,D405,D406,D407,D408,D409,D410,D411,D412,D413,D414,D415,D416,D417,D418,D419
exclude = 
    .git,
    __pycache__,
    .venv,
    .pytest_cache,
    build,
    dist,
    .coverage,
    htmlcov,
    .mypy_cache,
    .tox,
    .eggs,
    *.egg,
    .DS_Store,
    .vscode,
    .idea
per-file-ignores =
    __init__.py:D104
    tests/*:D100,D101,D102,D103,D104,D105,D106,D107,D401
max-complexity = 10
select = 
    C,
    E,
    F,
    W,
    B,
    B950,
    D,
    S
